.hero-unit
	%h1 Pentaly kicks
	%p shot some goals and win the game

#new_game
	.row-fluid
		.span2
		.span8
			= form_for @game do |f|
				= f.submit "Play now", class: "btn btn-large btn-primary", style: "width:100%"

- if @games
	%h2 Highscores
	%table.table.table-striped
		%tr
			%th Player
			%th Scores
		- @games.each do |g|
			%tr
				%td= g.player_name
				%td= g.scores